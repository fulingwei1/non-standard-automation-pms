# 环境变量配置文件（Docker Compose 使用）

# 数据库配置
DB_ROOT_PASSWORD=root_password_change_me
DB_PASSWORD=pms_password_change_me
SECRET_KEY=$(openssl rand -base64 32)

# Grafana 配置
GRAFANA_PASSWORD=admin_change_me

# Redis 配置
REDIS_URL=redis://redis:6379/0

# 应用配置
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 邮件配置（可选）
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=noreply@example.com
EMAIL_PASSWORD=smtp_password

# 企业微信配置（可选）
WECHAT_ENABLED=false
WECHAT_CORP_ID=your_corp_id
WECHAT_AGENT_ID=your_agent_id
WECHAT_SECRET=your_secret

# 短信配置（可选）
SMS_ENABLED=false
SMS_ALIYUN_ACCESS_KEY_ID=your_access_key
SMS_ALIYUN_ACCESS_KEY_SECRET=your_access_secret

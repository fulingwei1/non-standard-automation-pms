  "veto_rules": [
    {
      "id": "VETO-01",
      "name": "总分低于60分",
      "enabled": true,
      "when": {
        "all": [
          {
            "field": "total_score",
            "op": "lt",
            "value": 60
          }
        ]
      },
      "action": {
        "decision": "不建议立项",
        "status": "rejected"
      },
      "reason": "总分累计低于60分，售前评估不通过，项目由销售继续跟进"
    },
    {
      "id": "VETO-02",
      "name": "预算未知且客户未立项",
      "enabled": true,
      "when": {
        "all": [
          {
            "field": "budgetStatus",
            "op": "eq",
            "value": "未知"
          },
          {
            "field": "customerProjectStatus",
            "op": "eq",
            "value": "调研"
          }
        ]
      },
      "action": {
        "decision": "暂缓",
        "status": "deferred"
      },
      "reason": "预算未知且客户尚处调研阶段，属于高概率无效消耗项目"
    },
    {
      "id": "VETO-03",
      "name": "低于最低毛利红线",
      "enabled": true,
      "when": {
